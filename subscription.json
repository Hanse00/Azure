{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroups": {
           "type": "array",
           "defaultValue": [
               "network",
               "shared",
               "core"
           ],
           "metadata": {
                "description": "Resource Groups for Subscription"
            }
        },
        "RgLocationPrimary": {
           "type": "string",
           "defaultValue": "eastus",
           "metadata": {
                "description": "Primary Location used for all nested resource group deployments"
            }
        }      
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('ResourceGroups')[copyIndex()]]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('RgLocationPrimary')]",
            "tags": {},
            "copy": {
                "name": "RgLoop",
                "count": "[length(parameters('ResourceGroups'))]"
            },
            "properties": {}
        }
    ],
    "outputs": {},
    "functions": []
}