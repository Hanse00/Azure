{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/$scriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "DomainPrefixAbbreviation": {
            "type": "string",
            "metadata": {
                "description": "The abbreviated value of the domain name before the root node, i.e. jasonmasten for jasonmasten.com"
            }
        },
        "Environment": {
            "type": "string",
            "allowedValues": [
                "dev",
                "prod",
                "qa",
                "sandbox",
                "shared",
                "stage",
                "test"
            ],
            "defaultValue": "dev",
            "metadata": {
                "description": "The operating environment of the resources"
            }
        },
        "DisasterRecovery": {
            "type": "string",
            "metadata": {
                "description": "Determines if a secondary region is provisioned for high availability."
            },
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no"
        },
        "Locations": {
            "type": "array",
            "metadata": {
                "description": "Locations for Resource Groups & Resources. The first index is primary location and the second index is the secondary location for business continuity and disaster recovery "
            }
        },
        "PerformanceType": {
            "type": "string",
            "allowedValues": [
                "p",
                "s"
            ],
            "metadata": {
                "description": "The storage account sku"
            }
        },
        "ResourceGroups": {
            "type": "array",
            "metadata": {
                "description": "Resource group identifier"
            },
            "defaultValue": [
                "identity",
                "network",
                "shared"
            ]
        },
        "Timestamp": {
            "type": "string",
            "defaultValue": "[utcNow()]"
        },
        "User": {
            "type": "string",
            "metadata": {
                "description": "The username of the user principal that triggered the deployment"
            }
        },
        "VmPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Azure VM password"
            }
        },
        "VmUsername": {
            "type": "securestring",
            "metadata": {
                "description": "Azure VM username"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "comments": "---------- RESOURCE GROUPS > PRIMARY REGION ----------",
            "name": "[concat('rg-', parameters('ResourceGroups')[copyIndex()],'-', parameters('Environment'),'-', parameters('Locations')[0])]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "location": "[parameters('Locations')[0]]",
            "tags": {},
            "properties": {},
            "copy": {
                "name": "rgLoop1",
                "count": "[length(parameters('ResourceGroups'))]"
            }
        },
        {
            "comments": "---------- RESOURCE GROUPS > SECONDARY REGION ----------",
            "condition": "[equals(parameters('DisasterRecovery'),'yes')]",
            "name": "[concat('rg-', parameters('ResourceGroups')[copyIndex()],'-', parameters('Environment'),'-', parameters('Locations')[1])]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "location": "[parameters('Locations')[1]]",
            "tags": {},
            "properties": {},
            "copy": {
                "name": "rgLoop2",
                "count": "[length(parameters('ResourceGroups'))]"
            }
        },
        {
            "comments": "---------- LINKED DEPLOYMENT > NETWORK > PRIMARY REGION ----------",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Network_', parameters('User'), '_', parameters('Timestamp'))]",
            "apiVersion": "2019-10-01",
            "tags": {},
            "dependsOn": [
                "rgLoop1"
            ],
            "resourceGroup": "[concat('rg-network-', parameters('Environment'),'-', parameters('Locations')[0])]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "Environment": {
                        "value": "[parameters('Environment')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/jamasten/Azure/master/templates/network.json"
                }
            }
        }/*,
        {
            "comments": "---------- LINKED DEPLOYMENT > SHARED > PRIMARY REGION ----------",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Shared_', parameters('User'), '_', parameters('Timestamp'))]",
            "apiVersion": "2019-10-01",
            "tags": {},
            "resourceGroup": "[concat('rg-shared-', parameters('Environment'),'-', parameters('Locations')[0])]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "DomainPrefixAbbreviation": {
                        "value": "[parameters('DomainPrefixAbbreviation')]"
                    },
                    "Environment": {
                        "value": "[parameters('Environment')]"
                    },
                    "PerformanceType": {
                        "value": "[parameters('PerformanceType')]"
                    },
                    "Timestamp": {
                        "value": "[parameters('Timestamp')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/jamasten/Azure/master/templates/shared.json"
                }
            }
        },
        {
            "comments": "---------- LINKED DEPLOYMENT > SECURITY CENTER ----------",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('SecurityCenter_', parameters('User'), '_', parameters('Timestamp'))]",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[concat('Network_', parameters('User'), '_', parameters('Timestamp'))]"
            ],
            "resourceGroup": "[concat('rg-shared-', parameters('Environment'),'-', parameters('Locations')[0])]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "Location": {
                        "value": "[parameters('Locations')[0]]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/jamasten/Azure/master/templates/securitycenter.json"
                }
            }
        },
        {
            "comments": "---------- LINKED DEPLOYMENT > IDENTITY > PRIMARY REGION ----------",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('Identity_', parameters('User'), '_', parameters('Timestamp'))]",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[concat('Network_', parameters('User'), '_', parameters('Timestamp'))]"
            ],
            "resourceGroup": "[concat('rg-identity-', parameters('Environment'),'-', parameters('Locations')[0])]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "DomainPrefixAbbreviation": {
                        "value": "[parameters('DomainPrefixAbbreviation')]"
                    },
                    "Environment": {
                        "value": "[parameters('Environment')]"
                    },
                    "KeyEncryptionKeyURL": {
                        "value": "[parameters('KeyEncryptionKeyURL')]"
                    },
                    "VmPassword": {
                        "value": "[parameters('VmPassword')]"
                    },
                    "VmUsername": {
                        "value": "[parameters('VmUsername')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/jamasten/Azure/master/templates/identity.json"
                }
            }
        }*/
    ],
    "outputs": {
    }
}