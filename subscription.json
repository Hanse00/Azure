{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "blueprintPrefix": {
            "type": "string",
            "defaultValue": "jamasten",
            "metadata": {
                "description": "Name of the Blueprint"
            }
        },
        "Location": {
            "type": "string",
            "metadata": {
                "description": "Resource Group & Resource locations"
            }
        },
        "NamePrefixExternal": {
            "type": "string",
            "metadata": {
                "description": "Name prefix for external resources"
            }
        },
        "NamePrefixInternal": {
            "type": "string",
            "metadata": {
                "description": "Name prefix for internal resources"
            }
        },
        "SubnetId": {
            "type": "string",
            "metadata": {
                "description": "Policy definition rule parameter"
            }
        },
        "UserObjectId": {
            "type": "string",
            "metadata": {
                "description": "The Azure AD Object ID of the Security Principal"
            }
        },
        "VersionNumber": {
            "type": "string",
            "metadata": {
                "description": "Blueprint version number"
            }
        }
    },
    "functions": [
    ],
    "variables": {
        "blueprintDefinition": "[concat(parameters('blueprintPrefix'), '_definition')]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "name": "RestrictVirtualMachineNetworkInterfaces",
            "apiVersion": "2019-06-01",
            "properties": {
                "displayName": "Restrict VM network interfaces to a subnet",
                "description": "This policy restricts VM network interfaces to a subnet based on the resource group",
                "policyType": "Custom",
                "parameters": {
                    "SubnetId": {
                        "type": "String",
                        "metadata": {
                            "description": "Resource Id for Subnet",
                            "displayName": "Subnet Id"
                        }
                    }
                },
                "policyRule": {
                    "if": {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Network/networkInterfaces"
                            },
                            {
                                "field": "Microsoft.Network/networkInterfaces/ipconfigurations[*].subnet.id",
                                "notEquals": "[parameters('SubnetId')]"
                            }
                        ]
                    },
                    "then": {
                        "effect": "deny"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Blueprint/blueprints",
            "name": "[variables('blueprintDefinition')]",
            "apiVersion": "2018-11-01-preview",
            "dependsOn": [
                "RestrictVirtualMachineNetworkInterfaces"
            ],
            "properties": {
                "targetScope": "subscription",
                "description": "This blueprint stamps out new subscriptions for app teams with their resource groups and baseline infrastructure.  This includes policies on the resource groups.",
                "resourceGroups": {
                    "network": {
                        "description": "Contains the network infrastructure and controls for the subscription.",
                        "location": "[parameters('Location')]",
                        "name": "network"
                    },
                    "services": {
                        "description": "Contains the supporting, shared Azure resources for the subscription.",
                        "location": "[parameters('Location')]",
                        "name": "services"
                    },
                    "wvd": {
                        "description": "Contains the resources supporting Windows Virtual Desktop.",
                        "location": "[parameters('Location')]",
                        "name": "wvd"
                    }
                },
                "parameters": {
                }
            },
            "resources": [
                {
                    "type": "artifacts",
                    "name": "templateArtifact_network",
                    "apiVersion": "2018-11-01-preview",
                    "kind": "template",
                    "dependsOn": [
                        "[variables('blueprintDefinition')]"
                    ],
                    "properties": {
                        "displayName": "DeployNetworkInfrastructure",
                        "description": "This template deploys the network infrastructure for the subscription",
                        "parameters": {
                            "Location": {
                                "value": "[parameters('Location')]"
                            },
                            "NamePrefixInternal": {
                                "value": "[parameters('NamePrefixInternal')]"
                            }
                        },
                        "dependsOn": [
                        ],
                        "resourceGroup": "network",
                        "template": {
                            "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                                "Location": {
                                    "type": "string",
                                    "metadata": {
                                        "description": "description"
                                    }
                                },
                                "NamePrefixInternal": {
                                    "type": "string",
                                    "metadata": {
                                        "description": "Name prefix for private resources"
                                    }
                                }
                            },
                            "variables": {
                            },
                            "resources": [
                                {
                                    "name": "[concat(parameters('NamePrefixInternal'), 'vn1')]",
                                    "type": "Microsoft.Network/virtualNetworks",
                                    "apiVersion": "2018-08-01",
                                    "location": "[parameters('Location')]",
                                    "tags": {
                                    },
                                    "properties": {
                                        "addressSpace": {
                                            "addressPrefixes": [
                                                "10.0.0.0/16"
                                            ]
                                        },
                                        "dhcpOptions": {
                                            "dnsServers": [
                                                "10.0.1.5"
                                            ]
                                        },
                                        "subnets": [
                                            {
                                                "name": "Gateway",
                                                "properties": {
                                                    "addressPrefix": "10.0.0.0/29",
                                                    "serviceEndpoints": [
                                                    ],
                                                    "delegations": [
                                                    ],
                                                    "privateEndpointNetworkPolicies": "Enabled",
                                                    "privateLinkServiceNetworkPolicies": "Enabled"
                                                }
                                            },
                                            {
                                                "name": "Services",
                                                "properties": {
                                                    "addressPrefix": "10.0.1.0/24",
                                                    "serviceEndpoints": [
                                                    ],
                                                    "delegations": [
                                                    ],
                                                    "privateEndpointNetworkPolicies": "Enabled",
                                                    "privateLinkServiceNetworkPolicies": "Enabled"
                                                }
                                            },
                                            {
                                                "name": "WVD",
                                                "properties": {
                                                    "addressPrefix": "10.0.2.0/24",
                                                    "serviceEndpoints": [
                                                    ],
                                                    "delegations": [
                                                    ],
                                                    "privateEndpointNetworkPolicies": "Enabled",
                                                    "privateLinkServiceNetworkPolicies": "Enabled"
                                                }
                                            }
                                        ],
                                        "virtualNetworkPeerings": [
                                        ],
                                        "enableDdosProtection": false,
                                        "enableVmProtection": false
                                    }
                                }
                            ]
                        }
                    }
                },
                {
                    "type": "artifacts",
                    "name": "templateArtifact_services",
                    "apiVersion": "2018-11-01-preview",
                    "kind": "template",
                    "dependsOn": [
                        "[variables('blueprintDefinition')]"
                    ],
                    "properties": {
                        "displayName": "DeployCommonServices",
                        "description": "This template deploys the common services needed for each subscription",
                        "parameters": {
                            "Location": {
                                "value": "[parameters('Location')]"
                            },
                            "NamePrefixExternal": {
                                "value": "[parameters('NamePrefixExternal')]"
                            },
                            "NamePrefixInternal": {
                                "value": "[parameters('NamePrefixInternal')]"
                            },
                            "UserObjectId": {
                                "value": "[parameters('UserObjectId')]"
                            }
                        },
                        "dependsOn": [
                        ],
                        "resourceGroup": "services",
                        "template": {
                            "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                                "Location": {
                                    "type": "string",
                                    "metadata": {
                                        "description": "description"
                                    }
                                },
                                "NamePrefixExternal": {
                                    "type": "string",
                                    "metadata": {
                                        "description": "Name prefix for public resources (i.e. storage accounts)"
                                    }
                                },
                                "NamePrefixInternal": {
                                    "type": "string",
                                    "metadata": {
                                        "description": "Name prefix for private resources"
                                    }
                                },
                                "UserObjectId": {
                                    "type": "string",
                                    "metadata": {
                                        "description": "ID is required to set Key Vault Access Policy"
                                    }
                                }
                            },
                            "variables": {
                            },
                            "resources": [
                                {
                                    "type": "Microsoft.Storage/storageAccounts",
                                    "apiVersion": "2019-06-01",
                                    "name": "[concat(parameters('NamePrefixExternal'), 'sa1')]",
                                    "location": "[parameters('Location')]",
                                    "sku": {
                                        "name": "Standard_LRS",
                                        "tier": "Standard"
                                    },
                                    "kind": "StorageV2",
                                    "properties": {
                                        "networkAcls": {
                                            "bypass": "AzureServices",
                                            "virtualNetworkRules": [
                                            ],
                                            "ipRules": [
                                            ],
                                            "defaultAction": "Allow"
                                        },
                                        "supportsHttpsTrafficOnly": true,
                                        "encryption": {
                                            "services": {
                                                "file": {
                                                    "keyType": "Account",
                                                    "enabled": true
                                                },
                                                "blob": {
                                                    "keyType": "Account",
                                                    "enabled": true
                                                }
                                            },
                                            "keySource": "Microsoft.Storage"
                                        },
                                        "accessTier": "Hot"
                                    }
                                },
                                {
                                    "type": "Microsoft.KeyVault/vaults",
                                    "name": "[concat(parameters('NamePrefixExternal'), 'kv1')]",
                                    "apiVersion": "2019-09-01",
                                    "location": "[parameters('Location')]",
                                    "tags": {
                                    },
                                    "properties": {
                                        "enabledForDeployment": true,
                                        "enabledForTemplateDeployment": true,
                                        "enabledForDiskEncryption": true,
                                        "tenantId": "[subscription().tenantId]",
                                        "accessPolicies": [
                                            {
                                                "tenantId": "[subscription().tenantId]",
                                                "objectId": "[parameters('UserObjectId')]",
                                                "permissions": {
                                                    "keys": [
                                                        "encrypt",
                                                        "decrypt",
                                                        "wrapKey",
                                                        "unwrapKey",
                                                        "sign",
                                                        "verify",
                                                        "get",
                                                        "list",
                                                        "create",
                                                        "update",
                                                        "import",
                                                        "delete",
                                                        "backup",
                                                        "restore",
                                                        "recover",
                                                        "purge"
                                                    ],
                                                    "secrets": [
                                                        "get",
                                                        "list",
                                                        "set",
                                                        "delete",
                                                        "backup",
                                                        "restore",
                                                        "recover",
                                                        "purge"
                                                    ]
                                                }
                                            }
                                        ],
                                        "sku": {
                                            "name": "standard",
                                            "family": "A"
                                        }
                                    }
                                },
                                {
                                    "name": "[concat(parameters('NamePrefixInternal'),'aa1')]",
                                    "type": "Microsoft.Automation/automationAccounts",
                                    "apiVersion": "2015-10-31",
                                    "location": "[parameters('Location')]",
                                    "tags": {
                                    },
                                    "properties": {
                                        "sku": {
                                            "name": "Free"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                },
                {
                    "type": "artifacts",
                    "kind": "policyAssignment",
                    "name": "RestrictVmNics_Services",
                    "apiVersion": "2018-11-01-preview",
                    "dependsOn": [
                        "[variables('blueprintDefinition')]",
                        "templateArtifact_network"
                    ],
                    "properties": {
                        "displayName": "Restrict VM network interfaces to the Services subnet",
                        "description": "This policy restricts VM network interfaces to the Services subnet based on the Services resource group",
                        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions', 'RestrictVirtualMachineNetworkInterfaces')]",
                        "parameters": {
                            "SubnetId": {
                                "value": "[concat(subscription().id, '/resourceGroups/services/providers/Microsoft.Network/virtualNetworks/', parameters('NamePrefixInternal'), 'vn1/subnets/Services')]"
                            }
                        },
                        "dependsOn": [
                        ],
                        "resourceGroup": "services"
                    }
                },
                {
                    "type": "artifacts",
                    "kind": "policyAssignment",
                    "name": "RestrictVmNics_Wvd",
                    "apiVersion": "2018-11-01-preview",
                    "dependsOn": [
                        "[variables('blueprintDefinition')]",
                        "templateArtifact_network"
                    ],
                    "properties": {
                        "displayName": "Restrict VM network interfaces to the WVD subnet",
                        "description": "This policy restricts VM network interfaces to the Services subnet based on the Services resource group",
                        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions', 'RestrictVirtualMachineNetworkInterfaces')]",
                        "parameters": {
                            "SubnetId": {
                                "value": "[concat(subscription().id, '/resourceGroups/wvd/providers/Microsoft.Network/virtualNetworks/', parameters('NamePrefixInternal'), 'vn1/subnets/WVD')]"
                            }
                        },
                        "dependsOn": [
                        ],
                        "resourceGroup": "wvd"
                    }
                },
                {
                    "type": "versions",
                    "name": "[parameters('VersionNumber')]",
                    "apiVersion": "2018-11-01-preview",
                    "dependsOn": [
                        "[variables('blueprintDefinition')]",
                        "templateArtifact_network",
                        "templateArtifact_services",
                        "RestrictVmNics_Services",
                        "RestrictVmNics_Wvd"
                    ],
                    "properties": {
                        "displayName": "[concat(parameters('blueprintPrefix'), '_blueprint')]",
                        "description": "The base infrastructure for a subscription",
                        "targetScope": "subscription",
                        "parameters": {
                        },
                        "resourceGroups": {
                        },
                        "blueprintName": "[concat(parameters('blueprintPrefix'), '_blueprint')]",
                        "changeNotes": "test"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Blueprint/blueprintAssignments",
            "name": "[concat(parameters('blueprintPrefix'), '_assignment')]",
            "apiVersion": "2018-11-01-preview",
            "location": "[parameters('Location')]",
            "dependsOn": [
                "[concat(subscription().id, '/providers/Microsoft.Blueprint/blueprints/', variables('blueprintDefinition'), '/versions/', parameters('VersionNumber'))]"
            ],
            "identity": {
                "type": "SystemAssigned",
                "tenantId": "[subscription().tenantId]"
            },
            "properties": {
                "displayName": "[concat(parameters('blueprintPrefix'), '_assignment')]",
                "description": "This blueprint provides the base infrastructure for a subscription",
                "blueprintId": "[concat(subscription().id, '/providers/Microsoft.Blueprint/blueprints/', variables('blueprintDefinition'))]",
                "scope": "[subscription().id]",
                "parameters": {
                },
                "resourceGroups": {
                },
                "locks": {
                    "mode": "AllResourcesDoNotDelete",
                    "excludedPrincipals": [
                    ],
                    "excludedActions": [
                    ]
                }
            }
        }
    ],
    "outputs": {
    }
}