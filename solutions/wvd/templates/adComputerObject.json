{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "DomainAdminPassword": {
            "type": "string"
        },
        "DomainAdminUsername": {
            "type": "string"
        },
        "DomainControllerName": {
            "type": "string"
        },
        "DomainName": {
            "type": "string"
        },
        "KerberosEncryptionType": {
            "type": "string"
        },
        "KerberosKey": {
            "type": "string"
        },
        "Location": {
            "type": "string"
        },
        "OuPath": {
            "type": "string"
        },
        "StorageAccountName": {
            "type": "string"
        },
        "Tags": {
            "type": "object"
        },
        "Timestamp": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "comments": "---------- DSC EXTENSION ----------",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('DomainControllerName'), '/DSC')]",
            "apiVersion": "2019-07-01",
            "location": "[parameters('Location')]",
            "dependsOn": [
                "vmLoop"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.77",
                "autoUpgradeMinorVersion": true,
                "forceUpdateTag": "[parameters('Timestamp')]",
                "protectedSettings": {
                    "Items": {
                        "VmPassword": "[parameters('DomainAdminPassword')]"
                    }
                },
                "settings": {
                    "wmfVersion": "latest",
                    "modulesUrl": "https://github.com/jamasten/WhatTheHack/blob/main/dsc/ActiveDirectoryForest.zip?raw=true",
                    "configurationFunction": "ActiveDirectoryForest.ps1\\ActiveDirectoryForest",
                    "properties": {
                        "DomainName": "[parameters('DomainName')]",
                        "DomainCreds": {
                            "UserName": "[parameters('DomainAdminUsername')]",
                            "Password": "PrivateSettingsRef:VmPassword"
                        },
                        "Environment": "[environment().name]",
                        "StorageAccountName": "[parameters('StorageAccountName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2020-12-01",
            "name": "[concat(parameters('DomainControllerName'), '/CustomScriptExtension')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('Tags')]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [ "https://raw.githubusercontent.com/jamasten/Azure/master/solutions/wvd/scripts/New-ADStorageAccount.ps1" ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File New-ADStorageAccount.ps1 -Environment ''', environment().name, ''' -KerberosEncryptionType ', parameters('KerberosEncryptionType'), ' -Key ''', parameters('KerberosKey'), ''' -OuPath ''', parameters('OuPath'), ''' -StorageAccountName ''', parameters('StorageAccountName'), '''')]",
                    "timestamp": "[parameters('Timestamp')]"
                },
                "protectedSettings": {}
            }
        }
    ],
    "outputs": {
        "DomainInfo": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('DomainControllerName'), 'CustomScriptExtension')).instanceView.statuses[0].message]"
        }
    }
}